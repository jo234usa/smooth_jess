<div class="container">
	<div class="row">
		<div class="col-sm-12" id="img_div">
			<img src="http://pixel.nymag.com/imgs/daily/vulture/2015/04/30/30-archie-veronica-betty.nocrop.w529.h373.jpg" alt="Betty, Archie and Veronica sharing a smoothie">
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 task">
			{{#each smoothie_data}}
				{{#unless this.devoured}}
				<div class="col-sm-9">
					<pre>{{this.id}}. {{this.smoothie}}
						</pre>
				</div>

				<div class="col-sm-3">
					<form method="POST" action="/smoothies/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Slurp it!</button>
						<p>Slurp it good!</p>
					</form>
				</div>
				{{/unless}}
			{{/each}}
		</div>

		<div class="col-sm-6" class="task">
			{{#each smoothie_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.smoothie}}">
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<form action="/smoothies/create" method="POST">
				<input type="text" class="form-control" name="smoothie" value="" id="enter_text">
				<button type="submit" class="btn" id="text-enter-button">I'm thirsty!</button>
			</form>
			<p>Type in your smoothie name and click the button</p>
		</div>
	</div>
</div>


